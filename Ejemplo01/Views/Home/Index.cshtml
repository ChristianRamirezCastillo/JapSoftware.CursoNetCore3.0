@model List<Amigo>

@{
    ViewBag.Title = "Lista Amigos";
}

<div class="card-deck">
    @foreach(var amigo in Model)
    {
        var rutaFoto = "~/img/" + (amigo.Rutafoto ?? "codigo01.jpg");
        <div class="card m-3">
            <div class="card-header">
                <h3>@amigo.Nombre</h3>
            </div>
            <img class="card-img-top" src="@rutaFoto" asp-append-version="true"/>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@amigo.Id" class="btn btn-primary">Ver</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@amigo.Id" class="btn btn-primary">Editar</a>
                <a href="#" class="btn btn-danger">Borrar</a>
            </div>
        </div>
    }
</div>